@{
    ViewData["Title"] = "Buku Tamu";
}

<div class="d-flex justify-content-center">
    <form class="form-signin">

    <h1 class="h3 mb-3 font-weight-normal">Isi Buku Tambu</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" name="i_email" placeholder="Email address" required autofocus>
    <label for="inputName" class="sr-only">Your name</label>
    <input type="text" id="inputName" class="form-control" name='i_name' placeholder="Your Name" required>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>